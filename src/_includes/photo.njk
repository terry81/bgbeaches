---
layout: base.njk
---


<img src="/albums/{{ location }}/{{ photo.filename }}"
     alt="{{ photo.alt }}"
     class="images"
     loading="lazy" />

<div class="photo-nav">
  {% if photo.previous %}
  <a href="{{ photo.previous.url }}" class="nav-prev">← {{ 'previous' | t(locale) }}</a>
  {% else %}
  <span></span>
  {% endif %}

  <a href="/{{ locale }}/{{ location }}/" class="nav-back">← {{ 'backToGallery' | t(locale) }}</a>

  {% if photo.next %}
  <a href="{{ photo.next.url }}" class="nav-next">{{ 'next' | t(locale) }} →</a>
  {% endif %}
</div>

{% if content %}
{{ content | safe }}
{% endif %}

