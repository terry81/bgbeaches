}

@media (max-width: 768px) {
  .lightbox-content {
    width: 95%;
    max-height: 95vh;
  }

  .lightbox-image-container {
    max-height: 50vh;
  }

  .lightbox-image-container img {
    max-height: 50vh;
  }

  .lightbox-description {
    max-height: 40vh;
    padding: 15px 20px;
  }

