}

.lightbox-description {
  flex: 1 1 auto;
  padding: 20px 30px;
  background: #fff;
  overflow-y: auto;
  max-height: 30vh;
}

.lightbox-description h3 {
  margin-top: 0;
  color: #2c3e50;
  font-size: 1.5em;
  margin-bottom: 15px;
}

.lightbox-description p {
  color: #333;
