---
pagination:
  data: galleryData
  size: 1
  alias: gallery
permalink: "{{ gallery.locale }}/{{ gallery.location }}/index.html"
---

{% if gallery.gallery_description %}
<div class="location-intro">
  {% for section in gallery.gallery_description %}
    <h2>{{ section.heading }}</h2>
    <p align="justify">{{ section.content | markdownBold | safe }}</p>
  {% endfor %}
</div>
<hr />
{% endif %}

<h2>{% if gallery.locale == 'bg' %}–§–æ—Ç–æ–≥–∞–ª–µ—Ä–∏—è{% else %}Photo Gallery{% endif %}</h2>

<ul class="gallery">
{% for photo in gallery.photos %}
  <li>
    <a href="#" data-photo-index="{{ loop.index0 }}" class="gallery-thumbnail">
      {% set thumbnailName = photo.filename | replace('.jpg', '.jpg_TN') | replace('.JPG', '.JPG_TN') | replace('.png', '.png_TN') %}
      <img src="/albums/{{ gallery.location }}/{{ thumbnailName }}"
           alt="{{ photo.title }}"
           loading="lazy" />
      <br />
      {{ photo.title }}
    </a>
  </li>
{% endfor %}
</ul>

<div style="clear:both;"></div>

<!-- Detailed Photo Descriptions for SEO and Content -->
<div class="photo-descriptions">
  <h2>{% if gallery.locale == 'bg' %}–î–µ—Ç–∞–π–ª–Ω–æ –æ–ø–∏—Å–∞–Ω–∏–µ –Ω–∞ —Å–Ω–∏–º–∫–∏—Ç–µ{% else %}Detailed Photo Descriptions{% endif %}</h2>
  {% for photo in gallery.photos %}
    <div class="photo-detail" id="photo-{{ loop.index }}">
      <h3>{{ loop.index }}. {{ photo.title }}</h3>
      {% if photo.sections and photo.sections[0] and photo.sections[0].content %}
        <p align="justify">{{ photo.sections[0].content }}</p>
      {% endif %}
      {% if photo.alt and photo.alt != ' ' %}
        <p><em>{{ photo.alt }}</em></p>
      {% endif %}
    </div>
  {% endfor %}
</div>

<style>
.location-intro {
  margin: 20px 0;
}

.photo-descriptions {
  margin-top: 40px;
  padding-top: 20px;
  border-top: 2px solid #ddd;
}

.photo-detail {
  margin-bottom: 30px;
  padding: 20px;
  background: #f9f9f9;
  border-radius: 8px;
  box-shadow: 0 2px 5px rgba(0,0,0,0.1);
}

.photo-detail h3 {
  color: #2c3e50;
  margin-top: 0;
  margin-bottom: 15px;
  font-size: 1.3em;
}

.photo-detail p {
  line-height: 1.6;
  color: #333;
}

.photo-detail em {
  color: #666;
  font-size: 0.95em;
}
</style>

<!-- Lightbox Modal -->
<div id="lightbox-modal" class="lightbox-modal">
  <div class="lightbox-content">
    <button class="lightbox-close">&times;</button>
    <button class="lightbox-prev">&#10094;</button>
    <button class="lightbox-next">&#10095;</button>

    <div class="lightbox-image-container">
      <img id="lightbox-image" src="" alt="" />
    </div>

    <div class="lightbox-description">
      <h3 id="lightbox-title"></h3>
      <div id="lightbox-text"></div>
    </div>
  </div>
</div>

<script>
// Photo data
const galleryPhotos = [
{% for photo in gallery.photos %}
  {
    filename: "{{ photo.filename }}",
    title: {{ photo.title | dump | safe }},
    alt: {{ photo.alt | dump | safe }},
    description: {{ photo.sections[0].content | dump | safe }}
  }{{ "," if not loop.last }}
{% endfor %}
];

const galleryLocation = "{{ gallery.location }}";
const lightboxModal = document.getElementById('lightbox-modal');
const lightboxImage = document.getElementById('lightbox-image');
const lightboxTitle = document.getElementById('lightbox-title');
const lightboxText = document.getElementById('lightbox-text');
let currentPhotoIndex = 0;

// Open lightbox
document.querySelectorAll('.gallery-thumbnail').forEach(thumbnail => {
  thumbnail.addEventListener('click', (e) => {
    e.preventDefault();
    currentPhotoIndex = parseInt(e.currentTarget.dataset.photoIndex);
    showPhoto(currentPhotoIndex);
    lightboxModal.style.display = 'flex';
    document.body.style.overflow = 'hidden';
  });
});

// Close lightbox
document.querySelector('.lightbox-close').addEventListener('click', closeLightbox);
lightboxModal.addEventListener('click', (e) => {
  if (e.target === lightboxModal) {
    closeLightbox();
  }
});

function closeLightbox() {
  lightboxModal.style.display = 'none';
  document.body.style.overflow = 'auto';
}

// Navigation
document.querySelector('.lightbox-prev').addEventListener('click', (e) => {
  e.stopPropagation();
  currentPhotoIndex = (currentPhotoIndex - 1 + galleryPhotos.length) % galleryPhotos.length;
  showPhoto(currentPhotoIndex);
});

document.querySelector('.lightbox-next').addEventListener('click', (e) => {
  e.stopPropagation();
  currentPhotoIndex = (currentPhotoIndex + 1) % galleryPhotos.length;
  showPhoto(currentPhotoIndex);
});

// Keyboard navigation
document.addEventListener('keydown', (e) => {
  if (lightboxModal.style.display === 'flex') {
    if (e.key === 'Escape') {
      closeLightbox();
    } else if (e.key === 'ArrowLeft') {
      document.querySelector('.lightbox-prev').click();
    } else if (e.key === 'ArrowRight') {
      document.querySelector('.lightbox-next').click();
    }
  }
});

function showPhoto(index) {
  const photo = galleryPhotos[index];
  lightboxImage.src = `/albums/${galleryLocation}/${photo.filename}`;
  lightboxImage.alt = photo.alt || photo.title;
  lightboxTitle.textContent = photo.title;
  lightboxText.innerHTML = `<p>${photo.description}</p>`;
}
</script>

