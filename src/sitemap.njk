---
permalink: sitemap.xml
eleventyExcludeFromCollections: true
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9" xmlns:xhtml="http://www.w3.org/1999/xhtml">
  {%- for page in collections.all %}
    {%- if page.url and not page.url.includes('/albums/') and not page.url.includes('/css/') and not page.url.includes('/scripts/') %}
  <url>
    <loc>https://bgbeaches.com{{ page.url }}</loc>
    <changefreq>monthly</changefreq>
    {%- if page.url == '/' %}
    <priority>1.0</priority>
    {%- elif page.url.endsWith('/bg/') or page.url.endsWith('/en/') %}
    <priority>0.9</priority>
    {%- elif page.url.includes('/index.html') %}
    <priority>0.8</priority>
    {%- else %}
    <priority>0.7</priority>
    {%- endif %}
  </url>
    {%- endif %}
  {%- endfor %}
</urlset>

